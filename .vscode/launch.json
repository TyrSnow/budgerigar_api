{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/ts-node/dist/_bin.js",
      "args": [
        "${workspaceRoot}/src/server.ts" // 入口文件
      ],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "stopOnEntry": false,
      "runtimeExecutable": null,
      "runtimeArgs": [
        "--nolazy",
        "--es_staging",
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "internalConsole",
    },
    {
      "name": "Attach",
      "type": "node",
      "request": "attach",
      "port": 5858,
      "sourceMaps": true,
      "outFiles": ["./build/**/*.js"]
    },
    {
      "name": "test",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/nyc/bin/nyc.js",
      "args": [
        "mocha",
        "-r ./node_modules/ts-node/register",
        "-r ./node_modules/source-map-support/register",
        "src/**/*.spec.ts" // 入口文件
      ],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "stopOnEntry": false,
      "runtimeExecutable": null,
      "runtimeArgs": [
        "--nolazy",
        "--es_staging",
      ],
      "env": {
        "NODE_ENV": "test"
      },
      "console": "internalConsole",
    }
  ]
}